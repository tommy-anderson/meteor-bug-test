FROM /Layerfiles/base-app
#meteor is used only for preview links, so no need for it if no PRs
RUN REPEATABLE pkill node; cp -r ./ /root/server/ && tree -L 2 /root/server/.meteor/local && cd /root/server && ls && meteor npm run start-dev
RUN true
CHECKPOINT
RUN true
CHECKPOINT disabled
#Show contents after the app has run
RUN tree /root/server/.meteor/local