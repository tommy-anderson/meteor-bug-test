FROM /Layerfiles/base-app
#meteor is used only for preview links, so no need for it if no PRs
RUN REPEATABLE pkill node; cp -r /root/app/* /root/server/   && tree /root/server/ && cd /root/server && ls  && meteor npm run start-test
RUN true
CHECKPOINT
RUN true
CHECKPOINT disabled
#Show contents after the app has run
RUN ls /root/server/.meteor/local